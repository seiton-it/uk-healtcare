<?xml version="1.0" encoding="utf-8"?>
<it.seiton.healtcare.ui.main.hospitals.HospitalItemRowView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvName"
        style="@style/ItemRowPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:text="Hospital Name" />

    <TextView
        android:id="@+id/tvAddress"
        style="@style/ItemRowSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="4dp"
        tools:text="Hospital address" />

    <TextView
        android:id="@+id/tvCityAndCounty"
        style="@style/ItemRowSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvAddress"
        android:layout_alignStart="@+id/tvAddress"
        android:layout_below="@+id/tvAddress"
        tools:text="London" />

    <TextView
        android:id="@+id/tvPostcode"
        style="@style/ItemRowSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCityAndCounty"
        android:layout_alignStart="@+id/tvCityAndCounty"
        android:layout_below="@+id/tvCityAndCounty"
        tools:text="GU17" />

</it.seiton.healtcare.ui.main.hospitals.HospitalItemRowView>